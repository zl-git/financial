<?xml version="1.0"?>  
<!DOCTYPE hibernate-mapping PUBLIC   
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.spring.bo.system">
	<class name="Industry" table="t_industry">
		<id name="industryId">
			<generator class="native"></generator>
		</id>
		<property name="industryName" ></property>
		<set name="industries">
		    <key column="pid"></key>
		    <one-to-many class="Industry"/>
		</set>
		<many-to-one name="parentIndustry" class="Industry" column="pid"></many-to-one>
	</class>


</hibernate-mapping>  